<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.aaron.runmer.UserData.UserDataPage">

    <ImageView
        android:id="@+id/imageUser_dataView"
        android:layout_width="79dp"
        android:layout_height="88dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="?android:attr/fingerprintAuthDrawable" />

    <ImageButton
        android:id="@+id/imagebtn_user_gallery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="68dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="@+id/imageUser_dataView"
        app:layout_constraintTop_toTopOf="@+id/imageUser_dataView"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:text="Name："
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageUser_dataView" />

    <EditText
        android:id="@+id/edittxt_name"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="10dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="@+id/txt_name" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Email："
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <EditText
        android:id="@+id/edittxt_email"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_email"
        app:layout_constraintTop_toTopOf="@+id/txt_email" />

    <TextView
        android:id="@+id/txt_birth"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:inputType="date"
        android:text="Birth："
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_email"
        app:layout_constraintTop_toBottomOf="@+id/txt_email" />

    <EditText
        android:id="@+id/edittxt_birth"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="10dp"
        android:clickable="true"
        android:ems="10"
        android:hint="Birth"
        android:inputType="datetime"
        android:windowSoftInputMode="stateAlwaysHidden"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_birth"
        app:layout_constraintTop_toTopOf="@+id/txt_birth" />

    <TextView
        android:id="@+id/txt_height"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Height："
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_birth"
        app:layout_constraintTop_toBottomOf="@+id/txt_birth" />

    <EditText
        android:id="@+id/edittxt_height"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:hint="height"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_height"
        app:layout_constraintTop_toTopOf="@+id/txt_height" />

    <TextView
        android:id="@+id/txt_weight"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Weight："
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_height"
        app:layout_constraintTop_toBottomOf="@+id/txt_height" />

    <EditText
        android:id="@+id/edittxt_weight"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginEnd="25dp"
        android:ems="10"
        android:hint="weight"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_weight"
        app:layout_constraintTop_toTopOf="@+id/txt_weight" />

    <TextView
        android:id="@+id/txt_gender"
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="12dp"
        android:text="Gender："
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="@+id/txt_weight"
        app:layout_constraintTop_toBottomOf="@+id/txt_weight" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="25dp"
        android:text="OK"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/rdogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toEndOf="@+id/txt_gender"
        app:layout_constraintTop_toTopOf="@+id/txt_gender">

        <RadioButton
            android:id="@+id/rdobtn_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male  "
            android:textSize="20dp" />

        <RadioButton
            android:id="@+id/rdobtn_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="20dp" />
    </RadioGroup>


</android.support.constraint.ConstraintLayout>
